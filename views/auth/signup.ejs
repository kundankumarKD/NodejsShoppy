<%- include('../includes/head.ejs') %>
    
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/loginform.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
  
<% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
<% } %>
    <div class="lin">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
              <h5 class="card-title text-center mb-5 fw-light fs-5">Sign Up</h5>
              <form action="/signup" method="POST">
                <div class="form-floating mb-3">
                    <label for="email">E-Mail</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                        type="email" 
                        name="email" 
                        id="email" 
                        value="<%= oldInput.email %>">
                </div>
                <div class="form-floating mb-3">
                    <label for="password">Password</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                        type="password" 
                        name="password" 
                        id="password" 
                        value="<%= oldInput.password %>">
                </div>

                <div class="form-floating mb-3">
                    <label for="password">Confirm Password</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                        type="password" 
                        name="confirmPassword" 
                        id="password" 
                        value="<%= oldInput.confirmPassword %>">
                </div>
                <div class="d-grid">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
           
                    <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Signup</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
    <%- include('../includes/end.ejs') %>
  
  